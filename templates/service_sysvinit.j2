#!/bin/bash
#
# Startup/shutdown script for tomcat application server.
#
# chkconfig: 2345 56 10
# description: Startup/shutdown script for the tomcat application server.
#

. /etc/init.d/functions

: ${ret:=0}
LOCK=/var/run/hekad.lock
PROC=hekad


start(){
  echo -n $"Starting $PROC: "
  daemon /usr/bin/hekad -config=/etc/hekad.toml
  ret=$?
  echo
  [ $ret -eq 0 ] && touch $LOCK
}

stop(){
  echo -n $"Stopping $PROC: "
  killproc $PROC
  ret=$?
  echo
  [ $ret -eq 0 ] && rm -f $LOCK
}


case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  restart)
    stop
    start
  ;;
  status)
    status $PROC
  ;;
  *)
    echo $"Usage: $prog {start|stop|restart|status}"
    exit 3
  ;;
esac

exit $ret
